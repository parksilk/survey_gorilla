<h1>Survey</h1>
<% if !current_user.taken_surveys.map {|survey| survey.id}.include?(@survey.id) %>
  <img src=<%= @survey.image %>>
  <form method="post" action="/survey/<%= @survey.id %>">
  <ol>
    <% @survey.questions.each do |question| %>
    <li><%=question.text%></li>
      <ul class='survey_questions'>
        <% question.choices.each do |choice| %>
          <li><input type="radio" name="choice[<%=question.id%>]" value="<%=choice.id %>"><%= choice.text %></li>
        <% end %>
      </ul>
    
    <% end %>
  </ol>
  <input type="submit" value="Submit">
  </form>
<% else %>
  <h2>You've already taken that survey!</h2>
<% end %>

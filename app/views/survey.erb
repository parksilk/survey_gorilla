<h1>Survey</h1>

<form method="post">
<ol>
  <% @survey.questions.each do |question| %>
  
  <li><%=question.text%></li>
    <ul>
      <% question.choices.each do |choice| %>

        <li><input type="radio" name="choice[<%=question.id%>]" value="<%=choice.id %>"><%= choice.text %></li>
      <% end %>
    </ul>
  
  <% end %>
</ol>
<input type="submit" value="Submit">
</form>
